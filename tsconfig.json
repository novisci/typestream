{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": [
          "src/*"
      ]
    }
  },
  "include": [
      "./src/**/*.ts",
      "./test/**/*.ts",
      "index.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}